{% extends 'base.html.twig' %}

{% block title %}New Cadeau{% endblock %}

{% block body %}
    <div class="card mt-3">
        {{ form_start(form) }}
        <div class="card-hearder text-center fs-5 fw-semibold">
            Créer un nouveau cadeau
        </div>
        <div class="card-body py-0">
            <div class="mb-3">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prix) }}
            </div>
        </div>
        <div class="card-footer p-0">
            <button type="submit" class="btn btn-primary w-100">Créer le cadeau</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}