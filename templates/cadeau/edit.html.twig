{% extends 'base.html.twig' %}

{% block title %}New Cadeau{% endblock %}

{% block body %}
    <div class="mt-3">
        <div class="d-flex justify-content-end">
            <a href="{{ path('app_cadeau') }}" class="btn btn-primary">
                Voir les cadeaux existant
            </a>
        </div>
        <div class="card mt-2">
            {{ form_start(form) }}
            <div class="card-header text-center fs-5 fw-semibold">
                Modifier le cadeau
            </div>
            <div class="card-body py-0 mt-2">
                <div class="mb-3">
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prix) }}
                </div>
            </div>
            <div class="card-footer p-0">
                <button type="submit" class="btn btn-primary w-100">Modifier</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}