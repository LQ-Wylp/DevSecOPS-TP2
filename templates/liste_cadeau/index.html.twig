{% extends 'base.html.twig' %}

{% block title %}Cadeau
{% endblock %}

{% block body %}

	<div class="mt-3">
		<div class="d-flex justify-content-end">
			<a href="{{ path('app_cadeau_liste_new') }}" class="btn btn-primary">
				Cr√©er une nouvelle liste
			</a>
		</div>
		{% for listeCadeau in listeCadeaux %}

			<div class="card">
				<div class="card-header">
					<h3 class="card-title">Liste de cadeaux</h3>
				</div>
				<div class="card-body">
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>Nom</th>
								<th>Prix</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{% for cadeau in listeCadeau.cadeaux %}
								<tr>
									<td>{{ cadeau.nom }}</td>
									<td>{{ cadeau.prix }}</td>
									<td>
										<a href="#" class="btn btn-warning">
											Modifier
										</a>
										<a href="#" class="btn btn-danger">
											Supprimer
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		{% endfor %}
	</div>


{% endblock %}
